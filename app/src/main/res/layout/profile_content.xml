<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:weightSum="100"
    android:orientation="vertical">


    <TextView
        android:text="Profile Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="149dp"
            android:layout_height="176dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/profilePicture" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="295">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="53dp"
            android:id="@+id/imageButton"
            android:background="@android:drawable/ic_menu_gallery"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            android:layout_weight="0.06" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_layout"
        android:layout_marginTop="5dp"
        android:orientation="vertical">



        <Button
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/change_password_button"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/ic_vpn_key_black_24dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textAlignment="textStart"
            android:text=" Change Password" />

        <Button
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/logout"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/ic_exit_to_app_black_24dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textAlignment="textStart"
            android:text=" Log Out" />

        <Button
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/remove_account"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text=" Remove Account"
            android:drawableLeft="@mipmap/ic_account_circle_black_24dp"
            android:textAlignment="textStart"/>
    </LinearLayout>

</LinearLayout>